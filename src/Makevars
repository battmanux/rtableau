# set by configure
TAB_CFLAGS = -g -F/Library/Frameworks
TAB_LIBS   = -framework TableauCommon -framework TableauExtract -framework TableauServer

# combine with standard arguments for R
PKG_CXXFLAGS = `Rscript -e 'Rcpp:::CxxFlags()'` $(TAB_CFLAGS) -I../inst/include -std=c++11 -stdlib=libc++
PKG_LIBS = `Rscript -e 'Rcpp:::LdFlags()'` $(TAB_LIBS)
